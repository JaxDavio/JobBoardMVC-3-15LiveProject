@model JobBoardMVC.Models.ProfilePhoto
@{
    ViewBag.Title = "Photo";
}

<h2>Upload Photo to Profile:</h2>

@using (Html.BeginForm("UploadPhoto", "Dashboard", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.Label("Photo", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" id="Photo" name="upload" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Upload" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

